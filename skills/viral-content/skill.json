{
  "name": "viral-content",
  "description": "爆文分析-写作-反馈优化自进化系统的主控制器",
  "version": "1.0.0",
  "author": "Viral Content System",
  "tools": ["Read", "Write", "Glob", "Grep", "Task"],
  "subagents": ["analyzer", "writer", "reviewer"],
  "parameters": {
    "mode": {
      "type": "string",
      "description": "工作模式 (create/analyze/show-rules)",
      "required": true,
      "enum": ["create", "analyze", "show-rules"]
    },
    "topic": {
      "type": "string",
      "description": "内容选题（create模式必需）",
      "required": false
    },
    "content": {
      "type": "string",
      "description": "要分析的爆文内容（analyze模式必需）",
      "required": false
    },
    "platform": {
      "type": "string",
      "description": "目标平台 (wechat/xiaohongshu/douyin)",
      "required": true,
      "enum": ["wechat", "xiaohongshu", "douyin"]
    },
    "materials": {
      "type": "string",
      "description": "创作素材（可选）。支持两种格式：1) 文件路径（如 workspace/materials/xxx.md）2) 直接文本内容",
      "required": false
    }
  }
}
